    this.generateCalendar(this.currentYear, this.currentMonth);
    this.loadDateInfo(now.getFullYear(), now.getMonth() + 1, now.getDate());
  }

  // åˆ‡æ¢å¹´ä»½
  changeYear(newYear: number) {
